{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"outDir": "../build/esm",
		"rootDir": "..",
		"declaration": false, // generate side-by-side type declarations
		"module": "es2015",
		"noEmit": false
	},
	"exclude": [
		"../eg/**",
		"../src/esm-wrapper/**",
		"../src/**/*.cjs.ts",
		"../src/**/*.deno.ts",
		"../src/**/*.spec.*",
		"../src/**/*.test.*",
		"../test/**",
		"../node_modules/**"
	]
}
